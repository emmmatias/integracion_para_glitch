doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Seguimiento
        style.
            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }
            html, body {
                height: 100%;
            }
            .container {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
                background-color: #f0f0f0; 
            }
            .box {
                font-family: Arial, Helvetica, sans-serif;
                width: 90%; 
                max-width: 400px; 
                padding: 20px;
                background-color: #ffffff; 
                color: black;
                text-align: center;
                border-radius: 8px; 
            }
    body
        div.container
            div.box
                form#miform(action="/buscar", method="post")
                    input#numero(type="text", name="numero")
                    button#buscar(type="submit") BUSCAR!
                    div.cont2
        script.
            let button = document.querySelector('#buscar')
            
            button.addEventListener('submit', (e) =>{
                e.preventDefault()
                let numero = document.querySelector('#numero').value
                fetch('/buscar',{
                    method: 'POST'
                    body: JSON.stringify({
                        data: numero
                    }),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(data => data.json()).then(res =>{
                    let div2 = document.querySelector('.div2')
                    let html = `<p>${res.estado}</p>`
                })
            })
